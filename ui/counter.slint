export component CounterWindow inherits Window {
    in-out property <int> counter: 0;
    in-out property <int> heartbeat: 0;
    in-out property <int> wifi_state: 0;
    in-out property <int> wifi_attempt: 0;
    in-out property <bool> wifi_blink: false;
    in-out property <string> wifi_ssid: "";

    width: 240px;
    height: 135px;

    VerticalLayout {
        alignment: center;
        spacing: 6px;

        HorizontalLayout {
            alignment: center;
            spacing: 6px;

            Rectangle {
                width: 12px;
                height: 12px;
                border-radius: 6px;
                background: {
                    if wifi_state == 2 {
                        green
                    } else if wifi_state == 1 && wifi_blink {
                        orange
                    } else {
                        red
                    }
                };
            }

            Text {
                font-size: 14px;
                text: {
                    if wifi_state == 2 {
                        "WiFi: " + wifi_ssid
                    } else if wifi_state == 1 {
                        "WiFi: connecting (" + wifi_attempt + "/3)"
                    } else {
                        "WiFi: disconnected"
                    }
                };
                color: {
                    if wifi_state == 2 {
                        green
                    } else if wifi_state == 1 && wifi_blink {
                        orange
                    } else {
                        red
                    }
                };
            }
        }

        Text {
            text: "Counter: " + counter;
            horizontal-alignment: center;
            font-size: 28px;
        }

        Text {
            text: "Heartbeat: " + heartbeat;
            horizontal-alignment: center;
            font-size: 18px;
        }
    }
}
